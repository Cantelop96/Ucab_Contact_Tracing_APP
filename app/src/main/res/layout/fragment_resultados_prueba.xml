<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ResultadosPruebaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="40dp"
            android:gravity="top"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="Resultado Prueba COVID-19"
                android:textSize="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="La informacion que se introduzca en esta seccion es confidencial. \n\nEsta informacion es de un caracter sencible por esto usted se compromete a que la informacion que se introduzca en esta seccion es verdadera.\n\n "
                android:textSize="20dp" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <RadioButton
                        android:id="@+id/rb_resultado_negativo"
                        android:layout_width="169dp"
                        android:layout_height="wrap_content"
                        android:text="Negativo" />

                    <RadioButton
                        android:id="@+id/rb_resultado_positivo"
                        android:layout_width="163dp"
                        android:layout_height="wrap_content"
                        android:text="Positivo" />
                </LinearLayout>
            </RadioGroup>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/btn_siguiente_pruebas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Siguiente"
                    android:textColor="@color/negro_fondo"
                    android:textSize="16dp"
                    app:backgroundTint="@color/celeste"
                    app:cornerRadius="100dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>